                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingHorizontal="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/borderprofile">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha=".7"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Where Are You Going"
                            android:textColor="@color/text_color"
                            android:textSize="22sp" />
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/baseline_keyboard_arrow_right_24"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wheresthe"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingHorizontal="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/borderprofile">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha=".7"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Wheres The Bathroom"
                            android:textColor="@color/text_color"
                            android:textSize="22sp" />
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/baseline_keyboard_arrow_right_24"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/when"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingHorizontal="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/borderprofile">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha=".7"
                            android:fontFamily="@font/roboto_bold"
                            android:text="When"
                            android:textColor="@color/text_color"
                            android:textSize="22sp" />
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/baseline_keyboard_arrow_right_24"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/who"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingHorizontal="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/borderprofile">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha=".7"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Who"
                            android:textColor="@color/text_color"
                            android:textSize="22sp" />
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/baseline_keyboard_arrow_right_24"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/whom"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingHorizontal="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/borderprofile">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha=".7"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Whom"
                            android:textColor="@color/text_color"
                            android:textSize="22sp" />
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/baseline_keyboard_arrow_right_24"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/why"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingHorizontal="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/borderprofile">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha=".7"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Why"
                            android:textColor="@color/text_color"
                            android:textSize="22sp" />
                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/baseline_keyboard_arrow_right_24"/>

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
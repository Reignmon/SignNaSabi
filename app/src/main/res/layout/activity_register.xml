<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@drawable/logo1"
            android:layout_marginVertical="10dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:fontFamily="@font/fredoka_one"
            android:text="SignNaSabi"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/sniglet"
            android:text="Register"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_marginHorizontal="40dp">

            <EditText
                android:id="@+id/firtsname"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:textSize="16sp"
                android:background="@drawable/border_bottom"
                android:paddingStart="10dp"
                android:textColor="@color/border_color"
                android:hint="Firstname"
                android:textColorHint="@color/border_color"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/lastname"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:ems="10"
                android:textSize="16sp"
                android:hint="Lastname"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="@color/border_color"
                android:textColorHint="@color/border_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_marginHorizontal="40dp">

            <EditText
                android:id="@+id/middlename"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:ems="10"
                android:hint="Middlename"
                android:textSize="16sp"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="@color/border_color"
                android:textColorHint="@color/border_color" />

            <EditText
                android:id="@+id/jrname"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:ems="10"
                android:textSize="16sp"
                android:hint="Suffix Name"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="@color/border_color"
                android:textColorHint="@color/border_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="40dp">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:ems="10"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:paddingTop="12dp"
                android:text="Birthdate"
                android:textColorHint="@color/border_color"
                android:textColor="@color/border_color" />

            <EditText
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:ems="10"
                android:hint="Age"
                android:inputType="number"
                android:paddingStart="10dp"
                android:textColor="@color/border_color"
                android:textColorHint="@color/border_color"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="40dp">

            <Spinner
                android:id="@+id/spinner_gender"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/dropdown" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/spinner_user"
                android:layout_width="wrap_content"
                android:background="@drawable/dropdown"
                android:layout_height="48dp"
                android:layout_weight="1" />
        </LinearLayout>

        <EditText
            android:id="@+id/txtemail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:background="@drawable/border_bottom"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:textColor="@color/border_color"
            android:textColorHint="@color/border_color" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            android:theme="@style/MyHintText"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/border_color"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtpass"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border_bottom"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:textColor="@color/border_color"
                android:textSize="16sp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Must contain a number and atleast 8 characters"
            android:layout_marginHorizontal="40dp"
            android:textColor="@color/border_color"
            android:textSize="12sp"
            android:alpha=".5"
            android:paddingStart="5dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            android:theme="@style/MyHintText"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/border_color"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtpass1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Confirm Password"
                android:textColor="@color/border_color"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:background="@drawable/border_bottom"
                android:paddingStart="10dp"
                >
            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnregister"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="120dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btncolor"
            android:fontFamily="@font/fredoka_one"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:fontFamily="@font/blinker_semibold"
                android:text="Have an Account?"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="5dp"
                android:textColor="@color/border_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Login"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:fontFamily="@font/blinker_bold"
                android:text="Log In"
                android:textColor="@color/border_color"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>